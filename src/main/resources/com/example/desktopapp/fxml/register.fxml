<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.desktopapp.controllers.RegisterController">
    <children>
        <Pane prefHeight="221.0" prefWidth="300.0">
            <children>
                <Label layoutX="83.0" text="Registration" textAlignment="CENTER">
                    <font>
                        <Font name="Arial Black" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="usernameField" layoutX="60.0" layoutY="40.0" prefHeight="27.0" prefWidth="180.0" promptText="Login">
                    <style>
                        -fx-background-color: #CCFFCC;
                        -fx-border-color: #A9A9A9;
                        -fx-border-radius: 5;
                    </style>
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <PasswordField fx:id="passwordField" layoutX="60.0" layoutY="83.0" prefHeight="27.0" prefWidth="180.0" promptText="Password">
                    <style>
                        -fx-background-color: #CCFFCC;
                        -fx-border-color: #A9A9A9;
                        -fx-border-radius: 5;
                    </style>
                    <font>
                        <Font size="14.0" />
                    </font>
                </PasswordField>
                <TextField fx:id="emailField" layoutX="60.0" layoutY="131.0" prefHeight="27.0" prefWidth="180.0" promptText="Email">
                    <style>
                        -fx-background-color: #CCFFCC;
                        -fx-border-color: #A9A9A9;
                        -fx-border-radius: 5;
                    </style>
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <Button fx:id="regButton" cancelButton="true" layoutX="51.0" layoutY="177.0" mnemonicParsing="false" onAction="#handleLoginButtonAction" prefHeight="27.0" prefWidth="90.0" text="Login">
                    <style>
                        -fx-background-color: transparent;
                        -fx-text-fill: black;
                        -fx-border-color: #000000;
                        -fx-border-radius: 10;
                    </style>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="logButton" cancelButton="true" layoutX="161.0" layoutY="177.0" mnemonicParsing="false" onAction="#handleRegisterButtonAction" prefHeight="30.0" prefWidth="90.0" text="Register">
                    <style>
                        -fx-background-color: transparent;
                        -fx-text-fill: black;
                        -fx-border-color: #000000;
                        -fx-border-radius: 10;
                    </style>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </Pane>
    </children>
</AnchorPane>
